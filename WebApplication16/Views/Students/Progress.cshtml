@model WebApplication16.Models.Student
@{
    ViewBag.Title = "Progress";
}

<h2>Успеваемость:</h2>
<h4>@Html.DisplayFor(model => model.FullNameStudent)</h4>
<hr />
<table class="table">
    <tr>
        <th>
           Предмет
        <th>
           Оценка
        </th>
        <th>
           Дата
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Progresses)
    {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Subject.NameSubject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>@Html.ActionLink("удалить", "DeleteProgress", new { id = item.Id_Progress }, new { @class = "del" })</td>
    </tr>
    }

</table>
<p>
    @Html.ActionLink("К списку учеников", "Index")
</p>
